{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      "globalReturn": true,
      "experimentalDecorators": true
    }
  },
  "plugins": ["prettier", "class-property", "react", "jest"],
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.0.0"
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "semi": false, "trailingComma": "es5" }
    ],
    "no-undef": ["error"],
    "no-trailing-spaces": "error",
    "no-large-snapshotes": "error"
  },
  "globals": {
    "__DEV__": true
  }
}
