{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      "globalReturn": true,
      "experimentalDecorators": true
    }
  },
  "plugins": ["prettier", "class-property", "react"],
  "extends": ["prettier"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.0.0"
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "no-undef": ["error"]
  }
}
